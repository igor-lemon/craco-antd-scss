{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "skipLibCheck": true,
  },
  "lib": ["es2015"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "parserOptions": {
    "project": ["./tsconfig.json"],
  },
  "ignorePatterns": [
    ".eslintrc.js"
  ],
}
